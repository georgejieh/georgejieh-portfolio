---
import heroImage from '@assets/images/hero.png';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-white lg:text-5xl">
				Hi! My name is <span class="text-orange">George Jieh</span> and I am a Software Engineer specializing in AI/ML, Data Science, and Backend Development based in San Francisco Bay Area.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="learn more"><a href="#about" class="text-white hover:text-white">Learn more</a></Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={heroImage}
			alt="Data science illustration"
			format="png"
			width={600}
			height={600}
			loading="eager"
		/>
	</div>
</section>